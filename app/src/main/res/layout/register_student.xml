<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterStudent">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"

       android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:textSize="20sp"
           android:text="Please fill in the registration form"
           android:layout_height="match_parent"/>
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:hint="Please enter student registration number">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/regno"
               android:textSize="18sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:hint="Please enter student name">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/name"
               android:textSize="18sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>
       <!--email-->

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:hint="Please enter student email">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/email"
               android:textSize="18sp"
               android:inputType="textEmailAddress"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>

       <!-- address-->
       <!-- password1-->
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:hint="Please enter student address">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/address"
               android:textSize="18sp"
               android:inputType="text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>

       <!-- password1-->
       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:hint="Please enter student password">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/password1"
               android:textSize="18sp"
               android:inputType="textPassword"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>
       <!--    <EditText-->
       <!--        android:id="@+id/password1"-->
       <!--        android:layout_width="wrap_content"-->
       <!--        android:background="@drawable/edit_text_bg"-->
       <!--        android:inputType="textPassword"-->
       <!--        android:hint="Please enter student password"-->
       <!--        android:textSize="18sp"-->
       <!--        android:layout_height="wrap_content"-->
       <!--        />-->
       <!--password2-->
       <!--    <EditText-->
       <!--        android:id="@+id/password2"-->
       <!--        android:background="@drawable/edit_text_bg"-->
       <!--        android:layout_width="wrap_content"-->
       <!--        android:inputType="textPassword"-->
       <!--        android:hint="Please confirm your password"-->
       <!--        android:textSize="18sp"-->
       <!--        android:layout_height="wrap_content"-->
       <!--      />-->

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/filledTextField5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="32dp"
           android:layout_marginTop="64dp"
           android:layout_marginEnd="32dp"
           android:layout_marginBottom="20dp"
           android:hint="Please confirm your password">

           <!--this is the actual edit text which takes the input-->
           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/password2"
               android:textSize="18sp"
               android:inputType="text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </com.google.android.material.textfield.TextInputLayout>


       <Button
           android:id="@+id/register"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="REGISTER"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:layout_margin="20dp"
          />

       <TextView
           android:id="@+id/hasAccount"
           android:text="Already registered? | Login"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="70dp"
           android:textSize="18sp"
           android:layout_marginBottom="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>

</ScrollView>